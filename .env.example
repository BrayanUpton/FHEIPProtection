# ============================================================================
# PRIVATE IP PROTECTION PLATFORM - ENVIRONMENT CONFIGURATION
# ============================================================================
# WARNING: Never commit actual private keys or sensitive data to version control
# This file serves as a template. Copy to .env and fill in your actual values.
# ============================================================================

# ----------------------------------------------------------------------------
# PRIVATE KEYS & ACCOUNTS
# ----------------------------------------------------------------------------
# Primary deployer wallet private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Patent office administrator address
PATENT_OFFICE_ADDRESS=0x0000000000000000000000000000000000000000

# Pauser role address (for emergency pause functionality)
PAUSER_ADDRESS=0x0000000000000000000000000000000000000000

# Multi-sig wallet for production deployments
MULTISIG_WALLET=0x0000000000000000000000000000000000000000

# ----------------------------------------------------------------------------
# RPC ENDPOINTS
# ----------------------------------------------------------------------------
# Ethereum Sepolia Testnet
SEPOLIA_RPC_URL=https://rpc.sepolia.org
# Alternative: https://eth-sepolia.g.alchemy.com/v2/YOUR-API-KEY
# Alternative: https://sepolia.infura.io/v3/YOUR-API-KEY

# Zama Sepolia (FHE-enabled testnet)
ZAMA_SEPOLIA_RPC_URL=https://devnet.zama.ai

# Local Hardhat Network
LOCALHOST_RPC_URL=http://127.0.0.1:8545

# Ethereum Mainnet (Production)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR-API-KEY

# ----------------------------------------------------------------------------
# API KEYS & SERVICES
# ----------------------------------------------------------------------------
# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# CoinMarketCap API key for gas price estimation in USD
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Alchemy API key (if using Alchemy as RPC provider)
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Infura API key (if using Infura as RPC provider)
INFURA_API_KEY=your_infura_api_key_here

# Codecov upload token for coverage reports
CODECOV_TOKEN=your_codecov_token_here

# ----------------------------------------------------------------------------
# CONTRACT ADDRESSES (Update after deployment)
# ----------------------------------------------------------------------------
# Main contract address
CONTRACT_ADDRESS=0xCE563F9eCa84893C97c1212E0CdFeA823ae7d76B

# Proxy contract address (if using upgradeable pattern)
PROXY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Implementation contract address
IMPLEMENTATION_ADDRESS=0x0000000000000000000000000000000000000000

# ----------------------------------------------------------------------------
# GAS & PERFORMANCE CONFIGURATION
# ----------------------------------------------------------------------------
# Enable gas reporting in tests
REPORT_GAS=false

# Gas price in Gwei (leave empty for automatic)
GAS_PRICE=

# Gas limit for transactions
GAS_LIMIT=8000000

# Enable gas optimization in compiler
OPTIMIZER_ENABLED=true

# Number of optimization runs (200 is standard, higher = more deployment cost, lower runtime cost)
OPTIMIZER_RUNS=200

# ----------------------------------------------------------------------------
# SECURITY SETTINGS
# ----------------------------------------------------------------------------
# Enable security checks in tests
SECURITY_CHECKS=true

# Enable Slither static analysis
ENABLE_SLITHER=false

# Enable Mythril security analysis
ENABLE_MYTHRIL=false

# Maximum contract size in bytes (24576 = 24KB Ethereum limit)
MAX_CONTRACT_SIZE=24576

# Enable access control checks
ACCESS_CONTROL_ENABLED=true

# Emergency pause enabled
EMERGENCY_PAUSE_ENABLED=true

# ----------------------------------------------------------------------------
# APPLICATION CONFIGURATION
# ----------------------------------------------------------------------------
# Application fee in ETH
APPLICATION_FEE=0.1

# Review period in days
REVIEW_PERIOD_DAYS=30

# Maximum applications per applicant
MAX_APPLICATIONS_PER_APPLICANT=100

# Minimum examiner experience (in days)
MIN_EXAMINER_EXPERIENCE=90

# ----------------------------------------------------------------------------
# TESTING CONFIGURATION
# ----------------------------------------------------------------------------
# Test network to use
TEST_NETWORK=hardhat

# Enable coverage reporting
COVERAGE_ENABLED=true

# Coverage threshold percentage
COVERAGE_THRESHOLD=80

# Enable parallel testing
PARALLEL_TESTS=false

# Test timeout in milliseconds
TEST_TIMEOUT=120000

# ----------------------------------------------------------------------------
# DEPLOYMENT CONFIGURATION
# ----------------------------------------------------------------------------
# Deployment environment (development, staging, production)
DEPLOYMENT_ENV=development

# Auto-verify contracts on deployment
AUTO_VERIFY=true

# Save deployment artifacts
SAVE_DEPLOYMENTS=true

# Deployment confirmation blocks
CONFIRMATION_BLOCKS=5

# ----------------------------------------------------------------------------
# MONITORING & LOGGING
# ----------------------------------------------------------------------------
# Enable verbose logging
VERBOSE_LOGGING=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable transaction logging
TX_LOGGING=true

# Enable event monitoring
EVENT_MONITORING=true

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# ----------------------------------------------------------------------------
# FRONTEND CONFIGURATION (if applicable)
# ----------------------------------------------------------------------------
# Frontend URL
FRONTEND_URL=https://private-ip-protection-xaon.vercel.app

# API endpoint
API_ENDPOINT=https://api.example.com

# WebSocket endpoint for real-time updates
WS_ENDPOINT=wss://ws.example.com

# Enable frontend analytics
ANALYTICS_ENABLED=false

# Google Analytics ID
GA_TRACKING_ID=

# ----------------------------------------------------------------------------
# IPFS CONFIGURATION (for document storage)
# ----------------------------------------------------------------------------
# IPFS gateway URL
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Pinata API key for IPFS pinning
PINATA_API_KEY=

# Pinata secret key
PINATA_SECRET_KEY=

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION (if using off-chain indexing)
# ----------------------------------------------------------------------------
# Database connection string
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis URL for caching
REDIS_URL=redis://localhost:6379

# ----------------------------------------------------------------------------
# RATE LIMITING & DDOS PROTECTION
# ----------------------------------------------------------------------------
# Maximum requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Enable DDoS protection
DDOS_PROTECTION=true

# Cloudflare API key (if using Cloudflare)
CLOUDFLARE_API_KEY=

# ----------------------------------------------------------------------------
# BACKUP & RECOVERY
# ----------------------------------------------------------------------------
# Backup interval in hours
BACKUP_INTERVAL=24

# Backup storage location
BACKUP_LOCATION=./backups

# Enable automatic backups
AUTO_BACKUP=false

# ----------------------------------------------------------------------------
# FEATURE FLAGS
# ----------------------------------------------------------------------------
# Enable beta features
BETA_FEATURES=false

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# Maintenance mode
MAINTENANCE_MODE=false

# ----------------------------------------------------------------------------
# COMPLIANCE & LEGAL
# ----------------------------------------------------------------------------
# Terms of service URL
TERMS_OF_SERVICE_URL=https://example.com/terms

# Privacy policy URL
PRIVACY_POLICY_URL=https://example.com/privacy

# Enable GDPR compliance features
GDPR_COMPLIANCE=false

# Data retention period in days
DATA_RETENTION_DAYS=365

# ----------------------------------------------------------------------------
# NOTIFICATIONS
# ----------------------------------------------------------------------------
# Email service API key (SendGrid, Mailgun, etc.)
EMAIL_API_KEY=

# Email from address
EMAIL_FROM=noreply@example.com

# Slack webhook URL for alerts
SLACK_WEBHOOK_URL=

# Discord webhook URL for alerts
DISCORD_WEBHOOK_URL=

# ----------------------------------------------------------------------------
# PERFORMANCE OPTIMIZATION
# ----------------------------------------------------------------------------
# Enable caching
CACHING_ENABLED=true

# Cache TTL in seconds
CACHE_TTL=3600

# Enable compression
COMPRESSION_ENABLED=true

# CDN URL
CDN_URL=

# ----------------------------------------------------------------------------
# DEVELOPER OPTIONS
# ----------------------------------------------------------------------------
# Enable debug mode
DEBUG_MODE=false

# Enable source maps
SOURCE_MAPS=true

# Enable hot reload
HOT_RELOAD=true

# Enable profiling
PROFILING_ENABLED=false

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
# Remember to:
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. Never commit .env to version control
# 4. Keep your private keys secure
# 5. Rotate keys regularly
# 6. Use different keys for different environments
# ============================================================================
